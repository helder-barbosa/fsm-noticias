<%- include('partials/header') %>

  <div class="text-center">
    <form class="form-signin" method="post">
      <h1 class="h2 mb-3 font-weight-normal">Login</h1>
      <label for="inputUsername" class="sr-only">Username</label>
      <input name="username" type="text" id="inputUsername" class=" my-1 form-control" placeholder="Username" required
        autofocus>
      <label for="inputPassword" class="sr-only">Password</label>
      <input name="password" type="password" id="inputPassword" class=" my-1 form-control" placeholder="Password"
        required>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
      <a class="btn btn-lg btn-secondary btn-block my-1" href="/facebook">Entrar com
        Facebook</a>
      <a class="btn btn-lg btn-secondary btn-block my-1" href="/google">Entrar com
        Google</a>
    </form>

  </div>

  <%- include('partials/footer') %>